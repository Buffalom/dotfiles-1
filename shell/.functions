function a() {
    php artisan "$@"
}

function yii() {
    php yii "$@"
}

function ips() {
    nameservers=(8.8.8.8 8.8.4.4 1.1.1.1 195.129.12.122 192.76.144.66 158.43.240.3 77.88.8.8)
    for i in "${nameservers[@]}";
    do
        echo "$i"
        dig @"$i" +nocmd "$1" A +multiline +noall +answer
        echo
    done
}

function whatgit() {
    days=${1:-2}
    echo "gitlogs of the last $days days"
    cd ~/Code && git standup -s -d "$days" -D local -m 3
}

# Create a new directory and enter it
function mkd() {
   mkdir -p "$@" && cd "$@"
}

# All the dig info
function digga() {
	dig +nocmd "$1" A +multiline +noall +answer
}

